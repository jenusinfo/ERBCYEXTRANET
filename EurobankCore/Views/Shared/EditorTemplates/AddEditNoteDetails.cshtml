@model Eurobank.Models.Application.NoteDetailsModel
@using Kendo.Mvc.UI
<div class="form-group">
    <label asp-for="NoteDetailsType" class="control-label">@ResHelper.GetString("Eurobank.Application.NoteDetail.Label.Type")</label>
    @(Html.Kendo().DropDownListFor(m => m.NoteDetailsType).BindTo((System.Collections.IEnumerable)ViewBag.DocumentType)
.OptionLabel(ResHelper.GetString("Eurobank.General.DropDownList.Select"))
.DataValueField("Value")
.DataTextField("Text").HtmlAttributes(new { @class = "form-control" }))
    @Html.ValidationMessageFor(X => X.NoteDetailsType)
</div>
