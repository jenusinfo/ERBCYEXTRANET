<script>
    $(document).ready(function () {
        if ($("#IsBankDocAttachmentAllowed").val() == "True") {
            $("#FileUplaodDIV").css("display", "block");
        }
        else {
            $("#FileUplaodDIV").css("display", "none");
        }
    });
    $('#btnShowBankFile').click(function () {
        var popup = $("#BankDocWindow").data('kendoWindow');
